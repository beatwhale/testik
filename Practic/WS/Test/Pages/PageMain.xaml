<Page x:Class="Test.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Button x:Name="PageBook" Click="PageBook_Click" Style="{StaticResource MainButton}">Таблица книг</Button>
                <Button x:Name="AddBook" Click="AddBook_Click" Style="{StaticResource MainButton}">Добавить книгу</Button>
                <Button Style="{StaticResource MainButton}">Test 5 (inactive)</Button>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button Style="{StaticResource MainButton}">Таблица категорий</Button>
                <Button Style="{StaticResource MainButton}">Добавить категорию</Button>
                <Button Style="{StaticResource MainButton}">Test 6 (inactive)</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
