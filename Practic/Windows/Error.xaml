<Window x:Class="Practic.Windows.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practic.Windows"
        mc:Ignorable="d"
        Icon="/Icons/error.ico"
       Title="Error" MinHeight="220" MinWidth="400" MaxHeight="250" MaxWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Name="message" Foreground="Black" Width="600"  FontWeight="Bold" Margin="0 30 0 0" FontSize="25" TextWrapping="Wrap" TextAlignment="Center">
                Произошла ошибка... Попробуйте еще раз.
        </TextBlock>
        <Button Style="{StaticResource buttonMain}"
                Content="ОК"
                Foreground="White"
                FontWeight="Bold"
                Height="45"
                Cursor="Hand"
                Width="140"
                FontSize="15"
                Margin="10 10 0 0"
                Grid.Row="2"
                Click="Btn_ok_Click"
                x:Name="Btn_ok">
        </Button>
    </Grid>
</Window>
